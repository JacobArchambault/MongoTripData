<form class="order-section" method="POST">

    <label>Trip date: </label>
    <p name="date" id="date">{{trips.date}}</p>
    <label for="city">City</label>
    <select name="city" type="text" required>
        <option value="Chicago" {{{select trips.city 'Chicago'}}}>Chicago</option>
        <option value="Indianapolis" {{{select trips.city 'Indianapolis'}}}>Indianapolis</option>
        <option value="Cincinnati"{{{select trips.city 'Cincinnati'}}}>Cincinnati</option>
        <option value="Nashville" {{{select trips.city 'Nashville'}}}>Nashville</option>
    </select>

    <label for="miles">Miles traveled</label><input type="number" name="miles" min="0" value={{trips.miles}} required>
    <label for"gallons">Gallons</label><input type="number" name="gallons" min="0" value={{trips.gallons}} required>
    <button type="submit" class="btn btn-success">Submit</button>

</form>